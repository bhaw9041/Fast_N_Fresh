<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="700.0" minWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CartController">
   <children>
      <Label layoutX="70.0" layoutY="49.0" prefHeight="31.0" prefWidth="204.0" text="Order Summary:">
         <font>
            <Font size="26.0" />
         </font></Label>
      <TableView fx:id="cartTable" layoutX="69.0" layoutY="169.0" prefHeight="200.0" prefWidth="733.0">
        <columns>
          <TableColumn fx:id="productId" prefWidth="116.0" text="ProductId" />
          <TableColumn fx:id="productName" minWidth="0.0" prefWidth="213.0" text="Item Name" />
            <TableColumn fx:id="price" prefWidth="108.0" text="Price" />
            <TableColumn fx:id="quantity" prefWidth="136.0" text="Quantity" />
            <TableColumn fx:id="itemTotalValue" prefWidth="159.0" text="Item Total Price" />
        </columns>
      </TableView>
      <Label fx:id="totalValue" layoutX="563.0" layoutY="470.0" prefHeight="47.0" prefWidth="230.0" text="Total Cart Value: $0">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Button layoutX="668.0" layoutY="46.0" mnemonicParsing="false" onAction="#goToPayment" prefHeight="38.0" prefWidth="134.0" text="Proceed to Payment" />
      <Button layoutX="85.0" layoutY="470.0" mnemonicParsing="false" onAction="#pushtoDB" prefHeight="26.0" prefWidth="124.0" text="Push to Database" />
   </children>
</AnchorPane>
